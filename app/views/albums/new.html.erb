<div class="css_form_container">
  <% if @current_user.present? %>
    <h2>Create Album</h2>
  <% end %>

  <%= form_for(@album, :html => {:multipart => true}) do |f| %>
    <div>
      <%= f.label "Album Name" %>
      <%= f.text_field :name, :placeholder => 'Portraits' %>
    </div>
    <div>
      <%= f.label "Album Images" %>
      <%= f.file_field :images, :multiple => true %>
    </div>
    <div>
      <%= f.submit "Create Album", :class => 'submit' %>
    </div>
    <% end %>
</div>
