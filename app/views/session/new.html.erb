<div class="css_form_container">
  <h2>Log In</h2>

  <% if flash[:error].present? %>
    <h2><%= flash[:error] %></h2>
  <% end %>

  <%= form_tag login_path do %>

    <div>
      <%= email_field_tag :email, nil, :placeholder => 'Email address', :class => 'css_form_control' %>
    </div>

    <div>
      <%= password_field_tag :password, nil, :placeholder => 'Password', :class => 'css_form_control' %>
    </div>

    <%= submit_tag "Log in", :class => 'submit' %>
  <% end %>
</div>
