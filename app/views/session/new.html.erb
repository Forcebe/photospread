<h2>Log In</h2>

<% if flash[:error].present? %>
  <h2><%= flash[:error] %></h2>
<% end %>

<%= form_tag login_path do %>

  <div>
    <%= label_tag :email %>
    <%= email_field_tag :email, nil %>
  </div>

  <div>
    <%= label_tag :password %>
    <%= password_field_tag :password, nil %>
  </div>

  <%= submit_tag "Log in" %>
<% end %>
